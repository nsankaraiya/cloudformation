{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Cloudformation Stack for EC2 and S3 bucket",
    "Metadata": {

    },
    "Parameters": {
      "myregion" : {
        "Type" : "String",
        "Description" : "Enter region where you want resource provisioned",
        "AllowedValues" : ["us-east-1", "us-west-1"],
        "Default" : "us-east-1"
      },
      "ec2Protected" : {
        "Type" : "String",
        "Description" : "Is resource protected for deletion",
        "AllowedValues" : ["Protected", "Unprotected"],
        "Default" : "Protected"
      }
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
      
      "ec2Volume" : {
         "Type" : "AWS::EC2::Volume",
         "Properties" : {
            "AutoEnableIO" : "true",
            "AvailabilityZone" : { "Fn::GetAtt" : [ "myEC2", "AvailabilityZone" ] },
            "Encrypted": "true",
            "Size" : "10",
            "Tags" : [
                  {
                      "Key" : "Name",
                      "Value" : { "Fn::GetAtt" : [ "myEC2", "PrivateDnsName" ] }
                  }
              ],
            "VolumeType" : "gp2"
         },
         "DeletionPolicy" : "Snapshot"
      },
      "DependsOn" : "myEC2"
    },

    "myEC2" : {
        "Type": "AWS::EC2::Instance",
        "Properties" : {
            "DisableApiTermination" : "false",
            "ImageId" : "ami-007a607c4abd192db",
            "InstanceType" : "t2.micro",
            "Monitoring" : "false",
            "SecurityGroupIds" : ["sg-1f0b253f"],
            "Tags": [
                {
                    "Key" : "Name",
                    "Value" : "myFirstEc2"
                }
            ],
            "UserData" : {
                "Fn::Base64" : {
                    "Fn::Join" : [
                        "",
                        [
                            "#!/bin/bash -ex",
                            "ls"
                        ]
                    ]
                }
            }
        }
    },

    "ec2AttachVolume" : {
      "Type" : "AWS::EC2::VolumeAttachment",
      "Properties" : {
          "Device" : "/dev/sdh",
          "InstanceId" : { "Ref" : "myEC2" },
          "VolumeId" : { "Ref" : "ec2Volume" }
        },
      "DependsOn" : "ec2Volume"
    },

    "Outputs" : {
      "volumeName" : {
        "Description" : "EBS volume name",
        "Value" : { "Ref" : "ec2Volume" },
        "Export" : {
          "Name" : "{$AWS::StackName}-ebsVolumeName"
        }
      },
      "myEC2Name" : {
        "Description" : "EC2 Instance Name",
        "Value" : { "Fn::GetAtt" : [ "myEC2", "PublicIp" ] }
      }
    }
}